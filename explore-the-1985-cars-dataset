# Task 1
```{r message=FALSE, warning=FALSE, error=TRUE}
# load libraries
library(readr)
library(dplyr)
```
# Task 2
```{r error=TRUE}
# load data
cars <- read_csv("cars85.csv")
```
# Task 3
```{r error=TRUE}
# inspect data
head(cars)
summary(cars)
```
# Task 4
```{r error=TRUE}
# select columns
cars <- select(cars, -normalized_losses)


```
# Task 5
```{r error=TRUE}
# view columns
colnames(cars)
```
# Task 6
```{r error=TRUE}
# rename column
cars <- rename(cars, risk_factor = symboling)
colnames(cars)

```
# Task 7
```{r error=TRUE}
# define threshold
mpg_threshold <- 30
```
# Task 8
```{r error=TRUE}
# add column
cars <- mutate(cars, mpg_diff_from_threshold = highway_mpg - mpg_threshold)
cars


```
# Task 9
```{r error=TRUE}
# filter rows
mpg_exceeds_threshold <- filter(cars, mpg_diff_from_threshold > 0)
mpg_exceeds_threshold
```
# Task 10
```{r error=TRUE}
# arrange rows
mpg_exceeds_threshold <- arrange(mpg_exceeds_threshold, desc(mpg_diff_from_threshold))

```
# Task 11
```{r error=TRUE}
# order rows by engine size
ordered_by_engine_size <- arrange(cars, desc(engine_size))
ordered_by_engine_size

```
# Task 12
```{r error=TRUE}
# choose make
chosen_make <- "isuzu"
```
# Task 13
```{r error=TRUE}
# filter rows by make
chosen_make_details <- filter(cars, make == chosen_make)

```
# Task 14
```{r error=TRUE}
# order filtered rows by engine size
chosen_make_details <- arrange(chosen_make_details, desc(engine_size))
chosen_make_details

```
